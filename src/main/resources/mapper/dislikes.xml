    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
            "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="com.nungil.Repository.Interfaces.DisLikesRepository">

        <insert id="insertDislike">
            INSERT INTO dislikes (video_id, user_id) VALUES (#{videoId}, #{userId});
        </insert>

        <!-- 별로예요 여부 확인 -->
        <select id="existsDislike" resultType="int">
            SELECT COUNT(*) FROM dislikes WHERE video_id = #{videoId} AND user_id = #{userId};
        </select>

        <!-- 별로예요 삭제 -->
        <delete id="deleteDislike">
            DELETE FROM dislikes WHERE video_id = #{videoId} AND user_id = #{userId};
        </delete>

    </mapper>
