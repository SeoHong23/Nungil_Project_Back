    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
            "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="com.nungil.Repository.Interfaces.LikesRepository">

        <insert id="insertLike">
            INSERT INTO likes (video_id, user_id) VALUES (#{videoId}, #{userId});
        </insert>

        <select id="existsLike" resultType="int">
            SELECT COUNT(*) FROM likes WHERE video_id = #{videoId} AND user_id = #{userId};
        </select>

        <delete id="deleteLike">
            DELETE FROM likes WHERE video_id = #{videoId} AND user_id = #{userId};
        </delete>

    </mapper>
